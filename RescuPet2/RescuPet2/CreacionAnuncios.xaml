<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RescuPet2.CreacionAnuncios"
             Title="Creación de Anuncios">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="img3.png" WidthRequest="400" HeightRequest="200"/>
            <Entry x:Name="txtNombre" Placeholder="Nombre" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="txtColonia" Placeholder="Colonia" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="txtFecha" Placeholder="Fecha" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Button Text="Elige la imagen y crea el anuncio" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>