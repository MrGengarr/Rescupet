        <ScrollView>
            <StackLayout VerticalOptions="Center">
                <Frame Padding="10">
                    <Image Source="cat1.jpg" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" WidthRequest="300" HeightRequest="300"/>
                </Frame>
                <Label Text="Nombre: Lulu" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" FontSize="30"/>
                <Label Text="Colonia: Playas de Tijuana" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" FontSize="30"/>
                <Label Text="Perdido desde 23/2/22" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" FontSize="30"/>
                <Label Text="Anuncio por: Admin" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" FontSize="30"/>
